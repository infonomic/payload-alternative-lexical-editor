{
  "name": "@infonomic/payload-alternative-lexical-editor",
  "version": "1.5.0",
  "private": false,
  "license": "MIT",
  "type": "module",
  "description": "An alternative lexical editor for Payload CMS.",
  "keywords": [
    "payload",
    "lexical",
    "editor",
    "payload cms",
    "lexical editor",
    "rich text editor",
    "alternative editor",
    "cms",
    "headless cms",
    "react",
    "next.js"
  ],
  "homepage": "https://github.com/infonomic/payload-alternative-lexical-editor",
  "bugs": {
    "url": "https://github.com/infonomic/payload-alternative-lexical-editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infonomic/payload-alternative-lexical-editor.git",
    "directory": "packages/payload-alternative-lexical-editor"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "chokidar 'src/**/*' -c 'npm-run-all build'",
    "build": "tsc -p tsconfig.json && tsc-alias && node copy-assets.js",
    "lint": "biome check --write --unsafe --diagnostic-level=error",
    "clean": "rimraf node_modules dist build .turbo",
    "test": "LOG_LEVEL=off tsx --env-file=.env --test $(find . -name \"*.test.ts\")",
    "test:one": "LOG_LEVEL=off tsx --no-warnings --env-file=.env --test",
    "test:vitest": "vitest run"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./field/toolbar-extensions": {
      "types": "./dist/field/toolbar-extensions.d.ts",
      "import": "./dist/field/toolbar-extensions.js"
    },
    "./field/rsc-entry": {
      "types": "./dist/field/rsc-entry.d.ts",
      "import": "./dist/field/rsc-entry.js"
    },
    "./cell/rsc-entry": {
      "types": "./dist/cell/rsc-entry.d.ts",
      "import": "./dist/cell/rsc-entry.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@payloadcms/translations": "^3.0.0",
    "@payloadcms/ui": "^3.0.0",
    "next": "^15.0.0 || ^16.0.0",
    "payload": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@lexical/clipboard": "0.40.0",
    "@lexical/code": "0.40.0",
    "@lexical/hashtag": "0.40.0",
    "@lexical/headless": "0.40.0",
    "@lexical/html": "0.40.0",
    "@lexical/link": "0.40.0",
    "@lexical/list": "0.40.0",
    "@lexical/mark": "0.40.0",
    "@lexical/markdown": "0.40.0",
    "@lexical/overflow": "0.40.0",
    "@lexical/react": "0.40.0",
    "@lexical/rich-text": "0.40.0",
    "@lexical/selection": "0.40.0",
    "@lexical/table": "0.40.0",
    "@lexical/utils": "0.40.0",
    "classnames": "^2.5.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "json-schema": "^0.4.0",
    "lexical": "0.40.0",
    "react-error-boundary": "^6.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@payloadcms/translations": "^3.74.0",
    "@payloadcms/ui": "^3.74.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "chokidar": "^5.0.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^17.2.3",
    "jsdom": "^28.0.0",
    "next": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "payload": "^3.74.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
